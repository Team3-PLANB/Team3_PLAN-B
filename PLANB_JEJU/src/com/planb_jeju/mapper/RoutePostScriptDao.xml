<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.planb_jeju.dao.SitePostScriptDao">

	<!-- 전체 수 -->
	<select id="getCount" resultType="Integer">
		SELECT COUNT(*)
		FROM route_postscript
	</select>
	
	<!-- 멤버 한명 셀렉 -->
	<select id="getSitePost" resultType="com.planb_jeju.dto.SitePostscript">
		SELECT *
		FROM route_postscript
		WHERE route_code = #{param1}, username =#{param2}
	</select>
	
	<!-- 삭제 -->
	<delete id="delete">
	 	DELETE route WHERE route_code = #{param1}, username =#{param2}
	</delete>
	
	<!-- 수정 -->
	<update id="update" >
		UPDATE route 
		SET routename=#{routename}, 
		    partner_code=#{partner_code},
		    sday=#{sday},
		    eday=#{eday}
		WHERE route_code = #{route_code}, username =#{username}
	</update>
	
