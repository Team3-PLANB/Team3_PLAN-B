<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.planb_jeju.dao.MemberDao">

	<!-- 전체 수 -->
	<select id="getCount" resultType="Integer">
		<!-- public int getCount(String field, String query) parameter 1개 이상인 경우 
			String field => param1 String query => param2 -->
		SELECT COUNT(*)
		FROM member
	</select>
	
	<!-- 페이스북 회원가입 -->
	<insert id = "fbjoin" parameterType = "String" >
		INSERT into member
		VALUES (#{param1}, #{param2}, #{param3})			
	</insert>
	
	<!-- 이메일 중복확인 -->
	<select id="checkEmail" resultType="Integer" parameterType = "String" >
		SELECT count(username)
		FROM member
		WHERE username = #{username}
	</select>

	<!-- 로그인 확인 -->
	<select id = "loginCheck" resultType="com.planb_jeju.dto.Member">
		SELECT username, password
		FROM member
		WHERE username = #{username}
	</select>
	
	<!-- 멤버 한명 셀렉 -->
	<select id="getMember" resultType="com.planb_jeju.dto.Member">
		SELECT *
		FROM member
		WHERE username = #{username}
	</select>
	
	<!-- 삭제 -->
	<delete id="delete">
	 	DELETE member WHERE username=#{username}
	</delete>
	
	<!-- 수정 -->
	<update id="update" >
		UPDATE member 
		SET password=#{password}, 
		    nickname=#{nickname}
		WHERE username=#{username}
	</update>
	
	<!-- 일반 회원가입 -->
	<insert id="insert">
		INSERT INTO member
	    VALUES( #{param1}, #{param2}, #{param3})
	</insert>
	
</mapper>
